---
const { name, icon, type, width } = Astro.props;
---

<button
  class:list={[
    "rounded-lg flex items-center justify-center py-2 px-3 h-11 text-white font-medium",
    {
      "bg-rose-500": type === "primary",
      "bg-green-500": type === "green",
      "text-purple-500 border-purple-500 border": type === "secondary-outline",
    },
    width,
  ]}
>
  {name}
  {icon && <img class="ml-3" src={`/${icon}.svg`} alt={icon} />}
</button>
