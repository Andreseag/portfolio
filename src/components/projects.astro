---
import projects from "../data/projects.json";
---

<div class="projects w-full flex justify-center mt-20">
  <div class="projects__container mx-4 md:mx-0 w-full md:w-4/5 lg:max-w-6xl">
    <div class="projects__title">
      <h2 class="text-5xl font-bold text-slate-800 mb-14">Proyectos</h2>
    </div>
    <div class="projects__content flex flex-wrap lg:flex-nowrap gap-7">
      {
        projects.map((project) => (
          <div class="project__card px-5 py-7 w-full lg:w-auto border rounded-md">
            <h4 class="text-3xl text-slate-800 font-bold">{project.title}</h4>
            <p class="mb-7">{project.description}</p>
            <div class="project-options">
              {project.options.map((option) => (
                <a
                  class:list={[
                    "px-5 py-2 mr-2 rounded-xl text-white font-semibold",
                    {
                      "bg-purple-600": option.name === "github",
                      "bg-green-600": option.name === "demo",
                    },
                  ]}
                  href={option.link}
                  target="_blank"
                >
                  {option.name}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
